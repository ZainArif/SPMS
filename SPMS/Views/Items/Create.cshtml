@model SPMS.Models.Item

@{
    ViewData["Title"] = "Add Item";
}

    <form asp-action="Create">
        <div class="row p-4 mx-2">
            <div class="col-12">
                <h2 style="color:#177b8b">Add Item</h2>
            </div>
            <div class="col-12">
                <hr />
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-12 p-3">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Item_Name" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item_Name" class="form-control" />
                        <span asp-validation-for="Item_Name" class="text-danger"></span>
                    </div>   
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Item_Code" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Item_Code" class="form-control" />
                        <span asp-validation-for="Item_Code" class="text-danger"></span>
                    </div>   
                </div>
                <div class="form-group row">
                    <div class="col-4 offset-4">
                        <input type="submit" value="Add" class="btn btn-info form-control" />
                    </div>
                    <div class="col-4">
                        <a asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
    

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
